<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayoutD"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_pg">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="192dp"
        android:layout_height="59dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="97dp"
        android:text="Add user"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextPersonUser"
        android:layout_width="294dp"
        android:layout_height="63dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="80dp"
        android:background="#FAF2F2"
        android:ems="10"
        android:hint="User"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dailogbuttonRemove"
        android:layout_width="177dp"
        android:layout_height="60dp"
        android:layout_marginStart="117dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="117dp"
        android:textColor="@drawable/text_btn_pg"
        android:background="@drawable/button_pg"
        android:text="Add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPersonUser" />
</androidx.constraintlayout.widget.ConstraintLayout>