<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    //Disabled Button
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid
                android:color="#BCB4B4"
                ></solid>
            <corners
                android:radius="15dp"
                />
        </shape>
    </item>
    //Released Button
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid
                android:color="#F4EEFF"
                ></solid>
            <corners
            android:radius="15dp"
            />
        </shape>
    </item>
    //Pressed Button
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid
                android:color="#F4EEFF">
            </solid>
            <corners
                android:radius="15dp"
                />
            <stroke
                android:width="1dp"
                android:color="#ECB8FF"
                />
        </shape>
    </item>
</selector>